# Database connection string
DATABASE_URI=mongodb://127.0.0.1/your-database-name

# Or use a PG connection string
#DATABASE_URI=postgresql://127.0.0.1:5432/your-database-name

# Production MongoDB Atlas connection string
# DATABASE_URI=mongodb+srv://username:password@cluster.mongodb.net/kearns-and-sons?retryWrites=true&w=majority

# Used to encrypt JWT tokens
PAYLOAD_SECRET=YOUR_SECRET_HERE

# Used to configure CORS, format links and more. No trailing slash
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# Secret used to authenticate cron jobs
CRON_SECRET=YOUR_CRON_SECRET_HERE

# Email Configuration
EMAIL_FROM_ADDRESS="app_sender@emailservice.com"
EMAIL_FROM_NAME="Application Sender Entity"

# Resend API Key 
RESEND_API_KEY=re_your_api_key_here

# Staff notification emails (values may be duplicate in a one-person company)
ADMIN_EMAIL="director@company.com"
STAFF_NOTIFICATION_EMAIL="admin_desk@company.com"

# Hetzner Object Storage (Production only - used when NODE_ENV=production)
HETZNER_BUCKET_NAME=storage-bucket-name-here
HETZNER_ACCESS_KEY=your_access_key_here
HETZNER_SECRET_KEY=your_secret_key_here
HETZNER_ENDPOINT=https://example.storage.your-region.provider-storage.app